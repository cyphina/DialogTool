<Window x:Name="winMain" x:Class="UPDialogTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UPDialogTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="700
		" Width="1000" MouseWheel="winMain_MouseWheel">
	<Grid x:Name="grdMain">
		<Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Panel.ZIndex="1">
			<Grid x:Name="canvTitleBar">
				<Label x:Name="lblTitle" Content="{Binding Text, ElementName=txtTitle}" FontSize="20" Foreground="#FFFFEFEF" Background="#FFAA2F2F" MouseDoubleClick="lblTitle_MouseDoubleClick"/>
				<TextBox x:Name="txtTitle" Background="#FF781E1E" Visibility="Hidden" Text ="Double Click this to Change Title" FontSize="20" KeyDown="txtTitle_KeyDown"/>
			</Grid>
		</Grid>
		<Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.ColumnSpan="1">
			<Border x:Name ="UPBorder" BorderThickness="5,5,5,10" Margin="0" Grid.Row="0" BorderBrush="#FF133566" Grid.RowSpan="2" Grid.ColumnSpan="2">
				<Canvas x:Name="canvMain" MouseLeftButtonDown="canvMain_MouseLeftButtonDown" MouseRightButtonDown="canvMain_MouseRightButtonDown" MouseMove="canvMain_MouseMove" RenderTransformOrigin="0.5,0.5" MouseLeftButtonUp="canvMain_MouseLeftButtonUp" MouseRightButtonUp="canvMain_MouseRightButtonUp" Width="10000" Height="10000" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Focusable="True" KeyDown="canvMain_KeyDown">
					<Canvas.Background>
						<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
							<GradientStop Color="Black" Offset="0"/>
							<GradientStop Color="#FF385FB2" Offset="1"/>
							<GradientStop Color="#FF405685" Offset="0.506"/>
						</LinearGradientBrush>
					</Canvas.Background>
					<Canvas.RenderTransform>
						<TransformGroup>
							<ScaleTransform x:Name="scale"/>
							<SkewTransform/>
							<RotateTransform/>
							<TranslateTransform x:Name="translation"/>
						</TransformGroup>
					</Canvas.RenderTransform>
					<Rectangle x:Name="rectSelection" Height="100" Canvas.Left="0" Canvas.Top="0" Width="100" Opacity="0.5" RenderTransformOrigin="0,0" Fill="#99933737" Visibility="Collapsed" Margin="-100,0,0,0"/>
				</Canvas>
			</Border>
		</Grid>
		<Grid Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.ColumnSpan="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Button Content="Save" x:Name="BtnSave" Height="30" Background="#CC000000" FontSize="16" Foreground="#FFFFE5D3" Click="BtnSave_Click" />
			<Button Content="Export" x:Name="BtnExport" Grid.Column="1" Height="30" Background="#CC000000" FontSize="16" Foreground="#FFFFE5D3" Click="BtnExport_Click" />
			<Button Content="Load" x:Name="BtnLoad" Grid.Column="2" Height="30" FontSize="16" Background="#CC000000" Foreground="#FFFFE5D3" Click="BtnLoad_Click" />
			<Button Content="Zoom Reset" x:Name="BtnResetZoom" Grid.Column="3" Height="30" Click="BtnResetZoom_Click" FontSize="16" Background="#CC000000" Foreground="#FFFFE5D3" />
			<Button Content="Clear" x:Name="BtnClear" Grid.Column="4" Height="30" Click="BtnClear_Click" FontSize="16" Background="#CC000000" Foreground="#FFFFE5D3" />
		</Grid>
	</Grid>
</Window>
