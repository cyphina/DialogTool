<UserControl x:Class="UPDialogTool.UPNodeConnector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UPDialogTool"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Line x:Name="lnNodeConnector" Y2="100" StrokeThickness="5" Fill="Black" X2="100" MouseDown="lnNodeConnector_MouseDown">
		<Line.Stroke>
			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
				<GradientStop Color="#FF256376" Offset="0"/>
				<GradientStop Color="#CC2FA63A" Offset="1"/>
			</LinearGradientBrush>
		</Line.Stroke>
	</Line>
</UserControl>
